<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.android.meetthehero.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@color/headerBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chosen_hero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/supermanname" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/answerBackground"
            android:gravity="center"
            android:text="@string/answers"
            android:textAllCaps="true"
            android:textColor="@color/questionColor"
            android:textSize="@dimen/headerStage"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/answerBackground"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:columnCount="2"
            android:paddingLeft="@integer/padAnswers"
            android:paddingRight="@integer/padAnswers"
            android:rowCount="1">

            <TextView
                android:id="@+id/name"
                android:text="@string/name"
                android:textColor="@color/headerBackground"
                android:textSize="@dimen/question"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="2"
                android:layout_rowWeight="1"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/final_score"
                android:text="@string/finalScore"
                android:textColor="@color/headerBackground"
                android:textSize="@dimen/question"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center_vertical"/>



        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@color/questionBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/question"
            android:text="Correct answers"
            android:textColor="@color/questionColor"
            android:textSize="@dimen/question"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:orientation="vertical"
            android:paddingLeft="@integer/padAnswers"
            android:paddingRight="@integer/padAnswers"
            android:rowCount="8">


            <TextView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center"
                android:text="1. "
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center"
                android:text="2. "
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center"
                android:text="3. "
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center"
                android:text="4. "
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center"
                android:text="5. "
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center"
                android:text="6. "
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center"
                android:text="7. "
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center"
                android:text="8. "
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correct_1"
                android:layout_columnWeight="7"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center_vertical"
                android:text="final score"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correct_2"
                android:layout_columnWeight="7"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center_vertical"
                android:text="final score"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correct_3"
                android:layout_columnWeight="7"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center_vertical"
                android:text="final score"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correct_4"
                android:layout_columnWeight="7"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center_vertical"
                android:text="final score"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correct_5"
                android:layout_columnWeight="7"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center_vertical"
                android:text="final score"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correct_6"
                android:layout_columnWeight="7"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center_vertical"
                android:text="final score"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correct_7"
                android:layout_columnWeight="7"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center_vertical"
                android:text="final score"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correct_8"
                android:layout_columnWeight="7"
                android:layout_rowWeight="1"
                android:width="0dp"
                android:height="0dp"
                android:gravity="center_vertical"
                android:text="final score"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answers"
                android:textStyle="bold" />


        </GridLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@color/headerBackground"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/retry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@integer/nextButtonsMargins"
            android:layout_weight="3"
            android:background="@color/questionBackground"
            android:fontFamily="serif"
            android:text="@string/restart"
            android:textAllCaps="false"
            android:textColor="@color/questionColor"
            android:textSize="@dimen/nextButtons"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>

