<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bot"
        android:layout_margin="@dimen/marginMarginInfo">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="4"
            android:orientation="horizontal">

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/strength" />

            <TextView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:text="@string/stregthText"
                android:textSize="@dimen/textMain"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/agility" />

            <TextView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:text="@string/agilityText"
                android:textSize="@dimen/textMain"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/intel"/>

            <TextView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:text="@string/intelText"
                android:textSize="@dimen/textMain"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="20"
                android:src="@drawable/info"
                android:scaleType="fitCenter"
                android:padding="@dimen/paddingQuestion"
                />

            <TextView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:layout_rowWeight="20"
                android:gravity="center"
                android:text="@string/text"
                android:textSize="@dimen/textMain"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </GridLayout>
    </LinearLayout>

</LinearLayout>